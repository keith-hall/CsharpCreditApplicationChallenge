{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CreditApplicationService": {
    "MinimumTerm": 1,
    "MinimumAppliedAmount": 2000,
    "MaximumAppliedAmount": 69000,
    "InterestRateBands": {
      "20000": 3, // up to (but not including) 20,000 gets 3%
      "39000": 4, // up to (but not including) 39,000 gets 4%
      "40000": 4, // up to (but not including) 40,000 gets 4% - spec missed this out
      "59000": 5, // up to (but not including) 59,000 gets 5%
      "60000": 5, // up to (but not including) 60,000 gets 5% - spec missed this out
      "-1": 6 // -1 here represents anything else, which gets 6%
    }
  }
}
